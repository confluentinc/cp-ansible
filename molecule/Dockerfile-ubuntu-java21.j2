FROM {{ item.image }}

RUN mkdir -p /usr/share/man/man1 && \
    apt-get update -y && \
    apt-get install -y openjdk-21-jdk wget gnupg vim jq && \
    apt-get install -y dirmngr

{% set DEFAULT_PACKAGE_VER = lookup('pipe', "awk '/confluent_package_version:/ {print $2}' $MOLECULE_PROJECT_DIRECTORY/roles/variables/defaults/main.yml" ) %}
{% set PACKAGE_VER = lookup('env', 'VERSION') | default(DEFAULT_PACKAGE_VER, true) %}
{% set REPO_VER = PACKAGE_VER | regex_replace('^([0-9])\\.([0-9]*).*', '\\1.\\2') %}
{% set COMMON_REPO_URL = lookup('env', 'COMMON_REPO_URL') | default('https://packages.confluent.io', true) %}
{% set CLIENT_REPO_URL = lookup('env', 'CLIENT_REPO_URL') | default('https://packages.confluent.io', true) %}

# Download and add Confluent Clients repository key using modern approach
RUN wget -qO /usr/share/keyrings/confluent-clients-archive-keyring.gpg {{ CLIENT_REPO_URL }}/clients/deb/archive.key && \
    echo "deb [signed-by=/usr/share/keyrings/confluent-clients-archive-keyring.gpg] {{ CLIENT_REPO_URL }}/clients/deb/ bookworm main" | tee /etc/apt/sources.list.d/confluent-clients.list && \
    apt-get update

# Download and add Confluent Common repository key using modern approach
RUN wget -qO /usr/share/keyrings/confluent-common-archive-keyring.gpg {{ COMMON_REPO_URL }}/deb/{{ REPO_VER }}/archive.key && \
    echo "deb [signed-by=/usr/share/keyrings/confluent-common-archive-keyring.gpg] {{ COMMON_REPO_URL }}/deb/{{ REPO_VER }} stable main" | tee /etc/apt/sources.list.d/confluent-common.list && \
    apt-get update

RUN apt-get install --yes \
      confluent-common \
      confluent-hub-client \
      confluent-rebalancer \
      confluent-rest-utils \
      confluent-metadata-service \
      confluent-server \
      confluent-security \
      confluent-kafka-connect-replicator \
      confluent-kafka-rest \
      confluent-ksqldb \
      confluent-schema-registry \
      confluent-security \
      confluent-schema-registry-plugins
