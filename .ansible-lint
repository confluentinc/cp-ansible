---
exclude_paths:
  - hosts_example.yml
  - nuke.yml
  - molecule/
  - test_roles/
  - .semaphore/
  - service.yml
skip_list:
  - risky-shell-pipe
  - command-instead-of-shell
  - var-spacing
  - unnamed-task
  - meta-no-info
  - role-name
  - package-latest
  - empty-string-compare
  - no-handler
  - no-log-password
  - fqcn-builtins
  - name
  - var-naming[no-role-prefix]
  - key-order
  - meta-runtime[unsupported-version]
  - no-changed-when
  - fqcn[action]
  - risky-file-permissions
  - command-instead-of-module
