<?xml version="1.0" encoding="utf-8"?>
<!--
  Kafka REST Proxy - Defense in Depth Security
  Strategy: Deny All Commands + Allow Specific MBeans
  1. Deny ALL Jolokia commands first (defense in depth)
  2. Allow only specific MBeans for monitoring
  3. Fine-grained attribute and operation control
-->
<restrict>
  <!-- ALLOW ONLY read command globally (blocks list, write, exec, search, notification, version) -->
  <commands>
  </commands>

  <!-- ALLOW ONLY - Specific MBeans for Kafka REST Proxy Monitoring -->
  <allow>
    <mbean>
      <name>kafka.rest:type=jetty-metrics</name>
      <attribute mode="read">*</attribute>
    </mbean>
  </allow>

</restrict>
