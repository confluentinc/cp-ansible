port={{kafka_broker_jolokia_port}}
host=0.0.0.0
{% if kafka_broker_jolokia_ssl_enabled|bool %}
keystore={{kafka_broker_pkcs12_keystore_path}}
keystorePassword={{kafka_broker_keystore_storepass}}
protocol=https
sslProtocol=TLSv1.2
{% endif %}
{% if kafka_broker_jolokia_auth_mode == 'basic' %}
authMode=basic
user={{kafka_broker_jolokia_user}}
password={{kafka_broker_jolokia_password}}
{% endif %}
