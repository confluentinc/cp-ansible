<?xml version="1.0" encoding="utf-8"?>
<restrict>
  <commands>
    <command>read</command>
  </commands>
  <allow>
    <mbean>
      <name>kafka.server:type=ReplicaManager,name=*</name>
    </mbean>
    <mbean>
      <name>kafka.server:type=BrokerTopicMetrics,name=*</name>
    </mbean>
    <mbean>
      <name>kafka.controller:type=KafkaController,name=*</name>
    </mbean>
    <mbean>
      <name>kafka.server:type=KafkaServer,name=*</name>
    </mbean>
  </allow>
  <deny>
    <mbean>
      <name>*:*</name>
    </mbean>
  </deny>
</restrict>
