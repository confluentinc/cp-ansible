<?xml version="1.0" encoding="utf-8"?>
<!--
  Kafka Broker - Defense in Depth Security
  Strategy: Deny All Access (Maximum Security)
  1. Block ALL Jolokia commands and operations
  2. No MBean access allowed for security
  3. Complete lockdown for production environments
-->
<restrict>
  <!-- Explicitly deny all commands -->
  <deny>
    <command>read</command>
    <command>write</command>
    <command>exec</command>
    <command>list</command>
    <command>search</command>
    <command>notification</command>
    <command>version</command>
  </deny>

  <!-- Deny all MBean access -->
  <deny>
    <mbean>
      <name>*:*</name>
      <attribute>*</attribute>
      <operation>*</operation>
    </mbean>
  </deny>
</restrict>
