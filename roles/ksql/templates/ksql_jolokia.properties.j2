port={{ksql_jolokia_port}}
host=0.0.0.0
{% if ksql_jolokia_ssl_enabled|bool %}
keystore={{ksql_keystore_path}}
keystorePassword={{ksql_keystore_storepass}}
protocol=https
sslProtocol.1=TLSv1.2
sslProtocol.2=TLSv1.3
{% endif %}
{% if ksql_jolokia_auth_mode == 'basic' %}
authMode=basic
user={{ksql_jolokia_user}}
password={{ksql_jolokia_password}}
{% endif %}
